.single-chat-component{
  display flex
  flex-direction column
  width 100%
  .single-chat-header{
    border-bottom 1px solid #e3e3e3
    display flex
    justify-content space-between
    align-items center
    height 36px
    padding 0 15px
    .right-header{
      .ca-geren{
        font-size 20px
        cursor pointer
      }
    }
  }
  .single-chat-content{
    flex 1
    overflow-y auto
  }
  .single-chat-input{
    height 120px
    border-top 1px solid #e3e3e3
    textarea{
      width 100%
      height 100%
      margin 0
      padding 0
      outline none
      border none
      resize none
      font-size 20px
    }
  }
}